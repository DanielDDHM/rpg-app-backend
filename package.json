{
  "name": "rpg-app-backend",
  "version": "1.0.0",
  "main": "app.js",
  "repository": "git@github.com:DanielDDHM/rpg-app-backend.git",
  "author": "DanielDDHM <daniel.ddhm@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "rimraf ./build && tsc",
    "start": "npm run build && node build/app.js",
    "dev": "cross-env NODE_ENV=DEV ts-node-dev --exit-child --transpile-only --ignore-watch node_modules src/app.ts",
    "dev:clear": "cross-env NODE_ENV=DEV ts-node-dev --clear --exit-child --transpile-only --ignore-watch node_modules src/app.ts",
    "lint": "eslint --ext .ts src",
    "lint:fix": "eslint --ext .ts src --fix",
    "docker:up": "docker-compose -f docker-compose.yml up -d",
    "docker:down": "docker-compose down"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.2",
    "@types/eslint": "8.4.5",
    "@types/jest": "28.1.6",
    "@types/uuid": "8.3.4",
    "@typescript-eslint/eslint-plugin": "5.30.7",
    "@typescript-eslint/parser": "5.30.7",
    "eslint": "8.20.0",
    "husky": "8.0.1",
    "jest": "^29.0.1",
    "prettier": "^2.7.1",
    "typescript": "4.7.4"
  },
  "dependencies": {
    "@fastify/cors": "8.0.0",
    "@prisma/client": "4.0.0",
    "@types/jsonwebtoken": "8.5.8",
    "axios": "0.27.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "1.20.0",
    "cross-env": "7.0.3",
    "docker": "1.0.0",
    "dotenv": "16.0.1",
    "fastify": "4.2.1",
    "jsonwebtoken": "^8.5.1",
    "prisma": "4.0.0",
    "promise": "8.1.0",
    "ts-node-dev": "2.0.0",
    "uuid": "8.3.2",
    "zod": "3.17.9"
  }
}
