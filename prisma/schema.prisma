generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Campaigns {
  id        String      @id @unique @default(uuid())
  name      String
  master    Users       @relation(fields: [usersId], references: [id])
  usersId   String
  Character Character[]
  createdAt DateTime    @default(now())
  updatedAt DateTime?   @default(now())
}

model Users {
  id        String      @id @unique @default(uuid())
  nick      String      @unique
  name      String
  email     String      @unique
  phone     String
  password  String
  Character Character[]
  Campaigns Campaigns[]
  isActive  Boolean?    @default(true)
  createdAt DateTime    @default(now())
  updatedAt DateTime?   @default(now())
}

model Character {
  id          String    @id @unique @default(uuid())
  name        String
  owner       Users     @relation(fields: [usersId], references: [id])
  usersId     String
  campaign    Campaigns @relation(fields: [campaignsId], references: [id])
  campaignsId String
  about       Json?
  slots       Json?
  atributes   Json?
  status      Json?
  magics      Json[]    @default([])
  items       Json[]    @default([])
  isAlive     Boolean?  @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime? @default(now())
}
